<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="background: url('/Content/img/fondo-azul.gif'); background-repeat:repeat">
    <!--NavBar-->
    <nav class="navbar navbar-default navbar-fixed-top" style="background-color: white">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("CASTANO & Asociados", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">Page 1 <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="#">Page 1-1</a></li>
                            <li><a href="#">Page 1-2</a></li>
                            <li><a href="#">Page 1-3</a></li>
                        </ul>
                    </li>
                    <li><a href="#">Page 2</a></li>
                    <li><a href="#">Page 3</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="#"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
                    <li><a href="#"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <!--Body-->
    <div class="container body-content" style="background-color: white">
        @RenderBody()
        <hr />
        <footer>
            <div class="col-lg-4">
                <h3 class="panel-title">
                    <strong>Síguenos</strong>
                </h3>
                <p></p>
                <ul class="list-unstyled">
                    <li class="facebook"><a href="https://www.facebook.com/CASTANO-asociados-154095021324925/" data-original-title="Facebook"><img src="~/Content/img/FB-logo.png" alt="FaceBook" /></a></li>
                </ul>
            </div>
            <div class="col-lg-4">
                &copy; Copyright @DateTime.Now.Year by CASTANO & Asociados
            </div>
            <div class="col-lg-4">
                <h3 class="panel-title">
                    <strong>Contáctanos</strong>
                </h3>
                <p></p>
                <ul class="list-unstyled">
                    <li><em class="glyphicon glyphicon-phone"></em> <strong>Phone:</strong> (+54) 0341 485-4531</li>
                    <li><em class="glyphicon glyphicon-envelope"></em> <strong>Email:</strong> <a href="mailto:info@castanoyasociados.com.ar" class="ApplyClass">info@castanoyasociados.com.ar</a></li>
                </ul>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
